start() {
	ebegin "Starting GlusterFSd"
	/usr/sbin/glusterfsd --pidfile=/var/run/glusterfsd.pid ${GLUSTERFSD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping GlusterFSd"
	start-stop-daemon --stop --quiet --pidfile /var/run/glusterfsd.pid
	eend $?
}
